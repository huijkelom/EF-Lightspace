<UserControl x:Class="LightSpace_WPF_Engine.Wpf.Views.UserControls.AudioUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LightSpace_WPF_Engine.Wpf.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="179">
    <Grid>
        <Border Width="100" Height="250" CornerRadius="10" Background="{DynamicResource LightSpaceGray_Dark}">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Slider HorizontalAlignment="Center" Orientation="Vertical" TickPlacement="Both" Width="30" Height="200" TickFrequency="1.11" Margin="0,10,0,10" ValueChanged="OnValueChanged"/>
                <Label Content="Master" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
